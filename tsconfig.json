{
  "exclude": ["node_modules", "lib", "tools", "**/*.test.ts"],
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
